{
    "manifest_version": 3,
    "name": "Mako Form Filler",
    "description": "I fill forms based on Vue JS",
    "version": "1.0",
    "icons": {
        "16": "/images/small_logo.png",
        "48": "/images/medium_logo.png",
        "128": "/images/large_logo.png"
    },
    "background": {
        "service_worker": 
            "background.js"
        
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "webRequest"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}